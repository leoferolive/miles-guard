# Environment variables for testing
NODE_ENV=test
LOG_LEVEL=error

# WhatsApp Test Configuration
WA_RECONNECT_ATTEMPTS=3
WA_RECONNECT_DELAY=1000
WA_SESSION_PATH=./test_auth_info
WA_PRINT_QR=false

# Telegram Test Configuration (Mock values)
TELEGRAM_BOT_TOKEN=test_bot_token_123456789
TELEGRAM_CHAT_ID=test_chat_id_987654321
TELEGRAM_ENABLED=false

# File Storage Test Configuration
LOGS_PATH=./test_logs
FILE_STORAGE_ENABLED=true

# Test Database Configuration
DB_PATH=./test_data

# Rate Limiting (faster for tests)
RATE_LIMIT_WINDOW=1000
RATE_LIMIT_MAX_REQUESTS=100

# Notification Configuration
NOTIFICATION_ENABLED=true
NOTIFICATION_RETRY_ATTEMPTS=2
NOTIFICATION_RETRY_DELAY=500

# Memory and Performance
MEMORY_LIMIT=100
GC_INTERVAL=5000

# Debug Configuration
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Health Check Configuration
HEALTH_CHECK_INTERVAL=5000
HEALTH_CHECK_TIMEOUT=3000